{# templates/admin/category/edit.html.twig #}
{% extends 'admin/base.html.twig' %}

{% block title %}Modifier catégorie{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Modifier une catégorie</h1>
        <div>
            <a href="{{ path('app_admin_category_index') }}" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> Retour à la liste
            </a>
            <a href="{{ path('app_admin_category_show', {'id': category.id}) }}" class="btn btn-info">
                <i class="fas fa-eye me-1"></i> Voir détails
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-warning text-white">
            <i class="fas fa-edit me-2"></i>Formulaire d'édition
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-warning mt-3">
                    <i class="fas fa-save me-1"></i> Enregistrer les modifications
                </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}