{% extends 'admin/base.html.twig' %}

{% block title %}Détails de la commande {{ order.reference }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Commande #{{ order.reference }}</h1>
        <a href="{{ path('app_admin_order_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Produits commandés</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th class="text-center">Prix</th>
                                    <th class="text-center">Quantité</th>
                                    <th class="text-center">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in order.orderItems %}
                                    <tr>
                                        <td>{{ item.productName }}</td>
                                        <td class="text-center">{{ item.price|format_currency('EUR') }}</td>
                                        <td class="text-center">{{ item.quantity }}</td>
                                        <td class="text-center">{{ item.subtotal|format_currency('EUR') }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Total</strong></td>
                                    <td class="text-center"><strong>{{ order.total|format_currency('EUR') }}</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Adresse de livraison</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-1">{{ order.shippingAddress }} {{ order.shippingAddress }}</p>
                         
                        
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Adresse de facturation</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-1">{{ order.billingAddress }} {{ order.billingAddress }}</p>
                           
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Informations de la commande</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="mb-1"><strong>Client :</strong> {{ order.user.email }}</p>
                        <p class="mb-1"><strong>Date :</strong> {{ order.createdAt|date('d/m/Y H:i') }}</p>
                        <p class="mb-1">
                            <strong>Statut :</strong>
                            <span class="badge bg-{{ order.status == 'cancelled' ? 'danger' : (order.status == 'delivered' ? 'success' : 'info') }}">
                                {{ order.statusLabel }}
                            </span>
                        </p>
                        <p class="mb-0">
                            <strong>Paiement :</strong>
                            <span class="badge bg-{{ order.paymentStatus == 'paid' ? 'success' : (order.paymentStatus == 'failed' ? 'danger' : 'warning') }}">
                                {{ order.paymentStatusLabel }}
                            </span>
                        </p>
                    </div>
                    
                    <div class="mb-3">
                        <h6>Méthode de paiement</h6>
                        <p class="mb-0">{{ order.paymentMethod }}</p>
                    </div>
                    
                    {% if order.paymentReference %}
                        <div class="mb-3">
                            <h6>Référence de paiement</h6>
                            <p class="mb-0">{{ order.paymentReference }}</p>
                        </div>
                    {% endif %}
                    
                  
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Mettre à jour le statut</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_row(form.status) }}
                    <button type="submit" class="btn btn-primary">Mettre à jour</button>
                    {{ form_end(form) }}
                </div>
            </div>
            
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <form action="{{ path('app_admin_order_resend_confirmation', {'id': order.id}) }}" method="post" class="mb-2">
                        <button type="submit" class="btn btn-outline-primary w-100">
                            <i class="fas fa-envelope me-2"></i>Renvoyer la confirmation
                        </button>
                    </form>
                    
                    {% if order.status == 'pending' or order.status == 'processing' %}
                        <form action="{{ path('app_admin_order_update_status', {'id': order.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette commande ?');">
                            <input type="hidden" name="status" value="cancelled">
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="fas fa-times me-2"></i>Annuler la commande
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}