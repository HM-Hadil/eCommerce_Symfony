{# templates/admin/product/index.html.twig #}
{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Mes produits</h1>
        <a href="{{ path('app_admin_product_new') }}" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Nouveau produit
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-box me-2"></i>Liste des produits
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Stock</th>
                            <th>Catégorie</th>
                            <th>Date de création</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>
                           {% if product.image %}
    <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.name }}" class="img-thumbnail" style="max-width: 50px;">
{% else %}
    <span class="badge bg-secondary">Pas d'image</span>
{% endif %}

                            </td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.price|number_format(2, ',', ' ') }} €</td>
                            <td>
                                {% if product.stock > 10 %}
                                    <span class="badge bg-success">{{ product.stock }}</span>
                                {% elseif product.stock > 0 %}
                                    <span class="badge bg-warning">{{ product.stock }}</span>
                                {% else %}
                                    <span class="badge bg-danger">Rupture</span>
                                {% endif %}
                            </td>
                            <td>{{ product.category ? product.category.name : 'Non catégorisé' }}</td>
                            <td>{{ product.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_admin_product_show', {'id': product.id}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ product.id }}">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>

                                <!-- Modal de confirmation -->
                                <div class="modal fade" id="deleteModal{{ product.id }}" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Confirmation de suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Êtes-vous sûr de vouloir supprimer le produit <strong>{{ product.name }}</strong> ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                <form method="post" action="{{ path('app_admin_product_delete', {'id': product.id}) }}">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center">Vous n'avez encore aucun produit.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}