{# templates/admin/product/edit.html.twig #}
{% extends 'admin/base.html.twig' %}

{% block title %}Modifier produit{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Modifier un produit</h1>
        <div>
            <a href="{{ path('app_admin_product_index') }}" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> Retour à la liste
            </a>
            <a href="{{ path('app_admin_product_show', {'id': product.id}) }}" class="btn btn-info">
                <i class="fas fa-eye me-1"></i> Voir détails
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-warning text-white">
            <i class="fas fa-edit me-2"></i>Formulaire d'édition
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.name) }}
                        {{ form_row(form.price) }}
                        {{ form_row(form.stock) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.category) }}
                        {{ form_row(form.imageFile) }}
                        {% if product.image %}
                            <div class="mb-3">
                                <label class="form-label">Image actuelle</label>
                                <div>
                                    <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.name }}" class="img-thumbnail" style="max-width: 200px;">
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.description) }}
                    </div>
                </div>
                <button class="btn btn-warning mt-3">
                    <i class="fas fa-save me-1"></i> Enregistrer les modifications
                </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}