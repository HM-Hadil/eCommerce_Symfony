                {% if currentCategory %}
                    {{ currentCategory.name }}
                {% else %}
                    Toutes les catégories
                {% endif %}
            </button>
            <ul class="dropdown-menu w-100" aria-labelledby="dropdownMenuButton">
                <li><a class="dropdown-item" href="{{ path('app_home', {'search': search}) }}">Toutes les catégories</a></li>
                {% for category in categories %}
                    <li><a class="dropdown-item" href="{{ path('app_home', {'category': category.id, 'search': search}) }}">{{ category.name }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
