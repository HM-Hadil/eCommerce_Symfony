{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Mon Panier</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    
    {% if cart and cart.cartItems|length > 0 %}
        <div class="card mb-4">
            <div class="card-header bg-light">
                <div class="row d-flex align-items-center">
                    <div class="col-md-5">Produit</div>
                    <div class="col-md-2 text-center">Prix</div>
                    <div class="col-md-2 text-center">Quantité</div>
                    <div class="col-md-2 text-center">Sous-total</div>
                    <div class="col-md-1 text-center">Actions</div>
                </div>
            </div>
            <div class="card-body">
                {% for item in cart.cartItems %}
                    <div class="row mb-3 d-flex align-items-center">
                        <div class="col-md-5">
                            <div class="d-flex align-items-center">
                                {% if item.product.imageFile %}
                                    <img src="{{ asset('uploads/products/' ~ item.product.imageFile) }}" alt="{{ item.product.name }}" class="img-thumbnail mr-3" style="width: 80px;">
                                {% else %}
                                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center mr-3" style="width: 80px; height: 80px;">
                                        <i class="fas fa-image fa-2x"></i>
                                    </div>
                                {% endif %}
                                <div class="ml-3">
                                    <h5 class="mb-0">{{ item.product.name }}</h5>
                                    <small class="text-muted">Réf: {{ item.product.id}}</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 text-center">
                            {{ item.price|format_currency('EUR') }}
                        </div>
                        <div class="col-md-2 text-center">
                            <form action="{{ path('app_cart_update', {'id': item.id}) }}" method="post" class="quantity-form d-flex justify-content-center align-items-center">
                                <div class="input-group" style="width: 120px;">
                                    <button type="button" class="btn btn-sm btn-outline-secondary quantity-decrease">-</button>
                                    <input type="number" name="quantity" value="{{ item.quantity }}" min="1" max="{{ item.product.stock }}" class="form-control form-control-sm text-center quantity-input">
                                    <button type="button" class="btn btn-sm btn-outline-secondary quantity-increase">+</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-2 text-center">
                            {{ item.subtotal|format_currency('EUR') }}
                        </div>
                        <div class="col-md-1 text-center">
                            <a href="{{ path('app_cart_remove', {'id': item.id}) }}" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </div>
                    {% if not loop.last %}
                        <hr>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-9 text-right">
                        <h5 class="font-weight-bold">Total</h5>
                    </div>
                    <div class="col-md-2 text-center">
                        <h5 class="font-weight-bold">{{ cart.total|format_currency('EUR') }}</h5>
                    </div>
                    <div class="col-md-1"></div>
                </div>
            </div>
        </div>
        
        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left mr-2"></i>Continuer mes achats
            </a>
            <div>
                <a href="{{ path('app_cart_clear') }}" class="btn btn-outline-danger mr-2" onclick="return confirm('Êtes-vous sûr de vouloir vider votre panier?')">
                    <i class="fas fa-trash mr-2"></i>Vider le panier
                </a>
                <a href="{{ path('app_order_checkout') }}" class="btn btn-success">
                    <i class="fas fa-check mr-2"></i>Passer commande
                </a>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            <p class="mb-0">Votre panier est vide.</p>
        </div>
        <a href="{{ path('app_product_index') }}" class="btn btn-primary">
            <i class="fas fa-shopping-cart mr-2"></i>Parcourir les produits
        </a>
    {% endif %}
</div>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle quantity buttons
    document.querySelectorAll('.quantity-decrease').forEach(function(button) {
        button.addEventListener('click', function() {
            const input = this.parentElement.querySelector('.quantity-input');
            if (parseInt(input.value) > 1) {
                input.value = parseInt(input.value) - 1;
                this.closest('form').submit();
            }
        });
    });

    document.querySelectorAll('.quantity-increase').forEach(function(button) {
        button.addEventListener('click', function() {
            const input = this.parentElement.querySelector('.quantity-input');
            const max = parseInt(input.getAttribute('max'));
            if (parseInt(input.value) < max) {
                input.value = parseInt(input.value) + 1;
                this.closest('form').submit();
            }
        });
    });

    // Submit form when quantity input changes
    document.querySelectorAll('.quantity-input').forEach(function(input) {
        input.addEventListener('change', function() {
            this.closest('form').submit();
        });
    });
});
</script>
{% endblock %}
{% endblock %}