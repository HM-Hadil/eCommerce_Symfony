{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .login-container {
            max-width: 400px;
            margin: 0 auto;
        }
        .form-floating {
            margin-bottom: 1rem;
        }
        .btn-login {
            font-size: 0.9rem;
            letter-spacing: 0.05rem;
            padding: 0.75rem 1rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container login-container">
    <div class="card shadow-sm mt-5">
        <div class="card-body p-4">
            <h2 class="card-title text-center mb-4">Connexion</h2>
            
            {% for flash_type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ flash_type }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
            
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

       {# Dans security/login.html.twig #}
<form method="post" action="{{ path('app_login') }}">

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.session.get('verified') == 1 %}
        <div class="alert alert-success">Votre compte a été vérifié avec succès. Vous pouvez maintenant vous connecter.</div>
    {% endif %}

    
    <div class="form-group">
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    </div>
    
    <div class="form-group">
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="btn btn-lg btn-primary mt-3" type="submit">
        Se connecter
    </button>

    <div class="text-center">
                    <a href="{{ path('app_register') }}" class="text-decoration-none">
                        Vous n'avez pas de compte ? Inscrivez-vous
                    </a>
                </div>
 </form>
 </div>
    </div>
</div>
{% endblock %}
